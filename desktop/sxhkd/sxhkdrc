

#
# Applications
#

# terminal
super + Return
	alacritty &

# dmenu
super + space
	dmenu_run -nb '#282828' -sf '#FF5555' -sb '#464646' -nf '#bbbbbb' &
#			  main back     color text	  higlight box	default text
#	dmenu_run -nb '#282C34' -sf '#61AFEF' -sb '#3E4451' -nf '#bbbbbb'

# nemo
super + alt + n
	nemo &

# firefox
super + alt + f
	firefox &

# brave
super + alt + b
	brave &

# librewolf
super + alt + l
	librewolf &

# code
super + alt + v
	code &

# discord
super + alt + d
	discord &

# lf
super + alt + m
	alacritty --command lf &

# spotify
super + alt + s
	spotify &

# steam
super + alt + t
	steam &




#
# Restart Applications
#

# nitrogen
super + shift + b
	nitrogen --restore &

# polybar
super + shift + p
	./.config/polybar/launch.sh $ &

# restart sxhkd
super + shift + t
	pkill -USR1 -x sxhkd




#
# Brightness
#

# increase
super + KP_Up
        brightnessctl set 10%+ &

super + shift + KP_Up
        brightnessctl set 1%+ &

# decrease
super + KP_Down
        brightnessctl set 10%- &

super + shift + KP_Down
        brightnessctl set 1%- &

# night mode intensities (6500 off)
super + ctrl + KP_Right
        redshift -P -O 1500 &

super + ctrl + KP_Left
        redshift -P -O 2500 &

super + ctrl + KP_Up
        redshift -P -O 3500 &

super + ctrl + KP_Down
        redshift -P -O 6500 &

super + Prior
        redshift -P -O 2500 &

super + Next
        redshift -P -O 6500 &




#
# Audio
#

# increase
XF86AudioRaiseVolume
        amixer -M set Master 5%+ &
shift + XF86AudioRaiseVolume
        amixer -M set Master 1%+ &

# decrease
XF86AudioLowerVolume
        amixer -M set Master 5%- &
shift + XF86AudioLowerVolume
        amixer -M set Master 1%- &

# toggle mute
XF86AudioMute
        amixer -M set Master toggle &




#
# Power
#

# shutdown
super + F1
	systemctl poweroff

# reboot
super + F2
	systemctl reboot






###
### BSPWM
###




#
# Miscellaneous
#

# restart bspwm
super + shift + r
	bspc wm -r

# logout
super + F3
	bspc quit




#	if [ "$(wmctrl -m | grep Name | awk '{print $2}')" = "bspwm" ]; then \
